<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://symfony.com/schema/dic/doctrine/doctrine-1.0.xsd">

    <!-- Реализует юридическое лицо -->
    <entity name="Maris\Symfony\Company\Entity\Company" table="companies" >
        <id name="id" type="integer" column="id">
            <generator/>
        </id>

        <!-- Юридический адрес -->
        <many-to-one field="address" target-entity="Maris\Symfony\Address\Entity\Address">
            <join-columns>
                <join-column name="address_id"/>
            </join-columns>
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-one>

        <!-- Список филиалов -->
        <one-to-many field="branches" target-entity="Maris\Symfony\Company\Entity\Branch" mapped-by="company">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <!-- Название организации -->
        <field name="name" column="_name" />

        <!-- Организационно правовая форма -->
        <embedded name="opf" class="Maris\Symfony\Company\Entity\Opf" column-prefix="opf_"/>

        <!-- Регистрационные данные компании -->
        <embedded name="registrationData" class="Maris\Symfony\Company\Entity\RegistrationData" column-prefix="reg_data_"/>

    </entity>

</doctrine-mapping>
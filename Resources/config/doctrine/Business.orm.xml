<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://symfony.com/schema/dic/doctrine/doctrine-1.0.xsd">

    <!-- Таблица организаций -->
    <entity name="Maris\Symfony\Company\Entity\Business" table="business" inheritance-type="SINGLE_TABLE">

        <discriminator-column name="legal" type="integer" />

        <discriminator-map>
            <discriminator-mapping value="0" class="Maris\Symfony\Company\Entity\SelfEmployed"/>
            <discriminator-mapping value="1" class="Maris\Symfony\Company\Entity\Entrepreneur"/>
            <discriminator-mapping value="2" class="Maris\Symfony\Company\Entity\Company"/>
        </discriminator-map>


        <id name="id" type="integer" column="id">
            <generator/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <field name="inn" length="12" />
        <many-to-one field="address" target-entity="Maris\Symfony\Address\Entity\Address">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-columns>
                <join-column name="address_id"/>
            </join-columns>
        </many-to-one>

    </entity>
</doctrine-mapping>